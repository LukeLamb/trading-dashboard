# Trading Dashboard Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Environment Configuration
TRADING_DASHBOARD_ENV=development

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_DEBUG=true
DASHBOARD_HOST=localhost

# Agent URLs (override YAML configurations)
MARKET_DATA_URL=http://localhost:8000
PATTERN_RECOGNITION_URL=http://localhost:8001
RISK_MANAGEMENT_URL=http://localhost:8002
ADVISOR_URL=http://localhost:8003
BACKTEST_URL=http://localhost:8004

# API Keys (when agents require authentication)
# MARKET_DATA_API_KEY=your_api_key_here
# EXTERNAL_DATA_API_KEY=your_external_api_key
# NOTIFICATION_API_KEY=your_notification_service_key

# ============================================================================
# DATABASE CONFIGURATION (Phase 1: Character & Profile System)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_game
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Database Configuration (future use)
# DATABASE_URL=sqlite:///trading_dashboard.db
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AUTHENTICATION & SECURITY (Phase 1: User System)
# ============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
BCRYPT_ROUNDS=12

# Security Settings (existing)
# SECRET_KEY=your_secret_key_for_sessions
# JWT_SECRET=your_jwt_secret_for_auth

# ============================================================================
# EMAIL CONFIGURATION (Phase 1: Password Reset)
# ============================================================================
EMAIL_PROVIDER=sendgrid  # Options: sendgrid, smtp, ses
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@tradingame.com
SENDGRID_FROM_NAME=Trading Game

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@tradingame.com
SMTP_USE_TLS=true

# ============================================================================
# GAME CONFIGURATION (Phase 1: XP & Characters)
# ============================================================================
STARTING_BALANCE=100000
XP_MULTIPLIER_ANALYST=1.1
XP_MULTIPLIER_RISK_TAKER=1.0
XP_MULTIPLIER_CONSERVATIVE=1.05
XP_MULTIPLIER_DAY_TRADER=1.0
XP_MULTIPLIER_HODLER=1.0
LEADERBOARD_REFRESH_INTERVAL=60
ALLOW_CHARACTER_CHANGE=true
CHARACTER_CHANGE_LEVEL=5
CHARACTER_CHANGE_COOLDOWN_DAYS=30

# ============================================================================
# FILE STORAGE (Phase 1: Avatar Uploads)
# ============================================================================
AVATAR_UPLOAD_DIR=./uploads/avatars
MAX_AVATAR_SIZE_MB=5
ALLOWED_AVATAR_FORMATS=jpg,jpeg,png,gif

# External Service Configuration
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_email_password

# Slack Integration (for alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#trading-alerts

# Discord Integration (for alerts)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/dashboard.log

# Performance Tuning
CACHE_TTL=300
MAX_CHART_POINTS=1000

# Data Quality Thresholds
MIN_DATA_QUALITY_GRADE=C
ALERT_THRESHOLD=D